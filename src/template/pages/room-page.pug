									g
										g(transform='translate(-543 -1276)')
											use(fill='#e4181b', xlink:href='#zv3pa')

							+e.feature-text
								p Мини-бар и кофемашина Nespresso

						+e.feature
							+e.feature-icon
								svg(xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', width='38', height='33', viewbox='0 0 38 33')
									defs
										path#9l65a(d='M581 1361.79v5.21h-35v-5.21l3.08-5.98V1337h28.84v18.81zm-29.87-6.74h24.74V1339h-24.74zm-2.45 5.98h29.64l-2.06-3.99h-25.52zm13.8 1.99h-14.43v1.99h14.42zm16.47 0h-14.42v1.99h14.42zm-8.2-19.06l-1.45 1.41a8.27 8.27 0 0 0-5.8-2.33c-2.2 0-4.25.83-5.8 2.33l-1.45-1.4a10.34 10.34 0 0 1 7.25-2.92c2.74 0 5.31 1.03 7.25 2.91zm-2.9 2.82l-1.45 1.4a4.2 4.2 0 0 0-5.8 0l-1.45-1.4a6.29 6.29 0 0 1 8.7 0zm-2.3 4.22c0 1.1-.92 2-2.05 2s-2.05-.9-2.05-2 .92-1.99 2.05-1.99 2.05.9 2.05 2z')
									g
										g(transform='translate(-544 -1335)')
											use(fill='#e4181b', xlink:href='#9l65a')

							+e.feature-text
								p Wi-fi, развлекательная система Bose и спутниковое телевидение с обширными списками фильмов по запросу.

					+e.item-line

				+e.item
					+e.item-title.title-2
						h3 спальные места

					+e.item-content
						+e.feature
							+e.feature-icon
								svg(xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', width='38', height='38', viewbox='0 0 38 38')
									defs
										path#d0y7a(d='M862 1279v35h-2.05v-2.05h-30.9v2.05H827v-35zm-2.05 22.7h-30.9v8.2h30.9zm0-5.27c0-1.7-1.38-3.07-3.08-3.07h-24.74a3.08 3.08 0 0 0-3.08 3.07v3.21h30.9zm-16.48-5.13v-6.15h-10.32v6.15zm12.38 0v-6.15h-10.32v6.15zm4.1-10.25h-30.9v11.28a5.1 5.1 0 0 1 2.05-.92v-8.3h26.8v8.3a5.1 5.1 0 0 1 2.05.92z')
									g
										g(transform='translate(-825 -1277)')
											use(fill='#e4181b', xlink:href='#d0y7a')

							+e.feature-text
								p Две большие кондиционированные гостиные с большими диванами-кроватями и одна гостиная могут быть преобразованы во вторую спальню с двумя односмальными кроватями

					+e.item-line

				+e.item
					+e.item-title.title-2
						h3 заселение

					+e.item-content
						+e.feature
							+e.feature-icon
								svg(xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', width='38', height='39', viewbox='0 0 38 39')
									defs
